@model BookSamples.Components.Data.SimpleCustomer 

<script type="text/javascript">
    var timer;
    $(document).ready(function () {
        timer = window.setInterval("__clearMsg()", 2000);
    });

    function __clearMsg() {
        $("#OutputMessage").text("");
        window.clearInterval(timer);
    }
</script>

<div class="container">
@using(Html.BeginForm("update", "home", new { Id = Model.Id }))   
{
    <table id="__tableCustomerEditAscx" rules="rows" frame="hsides">
        <tr>
            <td width="100px"><b>ID</b></td>
            <td width="350px">@Model.Id</td>
        </tr>
        <tr>
            <td><b>Company</b></td>
            <td><span>@Model.Company</span></td>
        </tr>
        <tr>
            <td><b>Contact</b></td>
            <td>@Html.DisplayTextFor(c => c.Contact)</td>
        </tr>
        <tr>
            <td><b>Address</b></td>
            <td>@Html.DisplayTextFor(c => c.Address)</td>
        </tr>
        <tr>
            <td><b>City</b></td>
            <td>@Html.DisplayTextFor(c => c.City)</td>
        </tr>
        <tr>
            <td><b>Country</b></td>
            <td>@Html.TextBoxFor(c => c.Country, new Dictionary<String, Object>() { { "class", "textBox" } })   
                <br />
                @Html.ValidationMessage("country") 
            </td>
        </tr>
    </table>
    <br/>
    <input id="btnSave" type="submit" value="Save" />
    
    <span id="OutputMessage">@TempData["OutputMessage"]</span>
}
</div>