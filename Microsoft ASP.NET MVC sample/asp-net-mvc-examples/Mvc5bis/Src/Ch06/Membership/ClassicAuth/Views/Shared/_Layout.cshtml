@model ClassicAuth.ViewModels.ViewModelBase

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width;user-scalable=no" />
    <link rel="stylesheet" href="~/Content/Styles/site.css" />
    <script type="text/javascript" src="~/content/scripts/jquery-1.7.1.js"></script>
    <script type="text/javascript" src="~/content/scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Secured app</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_logonPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
