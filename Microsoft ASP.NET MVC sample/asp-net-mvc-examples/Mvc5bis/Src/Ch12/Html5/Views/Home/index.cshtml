@{
    ViewBag.Title = "index";
}

<style>
    fieldset {
        padding: 10px;
    }
    summary {
        padding: 5px;
        font-weight: bold;
        color: #708090;
    }
    #details_inside {
        font-style: italic;
    }    
</style>

<h2>Sparse HTML5 features</h2>

<fieldset>
    <legend>DETAILS</legend>
    <details>
        <summary>Drill down</summary>
        <div id="details_inside">
            This text was initially kept hidden from view
        </div>
    </details>
</fieldset>

<fieldset>
    <legend>DATE</legend>
    <input type="date" />
</fieldset>

<fieldset>
    <legend><mark>DATALIST</mark></legend>
    <input list="countries" placeholder="Type or select" />
    <datalist id="countries">
        <option value="Italy">
        <option value="Austria">
        <option value="Australia">
        <option value="Albania">
        <option value="Sweden">
        <option value="Denmark">
    </datalist>
</fieldset>